/* Accordian */

ul.tabs {
  display: block;
  margin: 20px 0 20px;
  padding: 0;
}
ul.tabs li {
  display: block;
  float: left;
  height: 30px;
  margin-bottom: 0;
  padding: 0 20px 0 20px;
  width: auto;
}
ul.tabs li a {
  -moz-border-bottom-colors: none;
  -moz-border-image: none;
  -moz-border-left-colors: none;
  -moz-border-right-colors: none;
  -moz-border-top-colors: none;
  border-color: black !important;
  border-style: solid;
  border-width: 2px;
  display: block;
  font-size: 17px;
  margin: 0;
  padding: 10px 20px;
  text-decoration: none;
  color: black;
  text-transform: uppercase;
}
ul.tabs li a.active {
  background-color: black;
  color: white;
}
ul.tabs:before, ul.tabs:after {
  content: " ";
  display: block;
  height: 0;
  overflow: hidden;
  visibility: hidden;
  width: 0;
}
ul.tabs:after {
  clear: both;
}
