/* ADD TO CART */

#AddToCartForm {
  text-transform: uppercase;
}

input#Quantity {
  margin: 10px 0;
  text-align: center;
  border: 2px solid black;
  width: 45px;
}

label.quantity {
    margin-right: 10px;
}

.input-row {
  margin-top: 10px;
}

button#AddToCart {
  width: 380px;
  margin-top: 10px;
  @include at-query ($max, $medium){
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 7;
    width: 100%;
    padding: 0;
    height: 60px;
    margin: 0;
    background-color: grey;
    

  }
}

button#AddToCart.not-sticky {
  width: 90%;
  position: relative;
  z-index: 1;
  margin-top: 10px;
  background-color: black;
  height: 40px;
      &.disabled {
      background: none;
      color: black;
    }
}