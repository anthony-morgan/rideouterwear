/* Footer */

.footer-menu { 
  padding: 0 20px;
}

.footer-logo {
  max-width: 120px;
  margin: 0 auto 10px;
}

.footer-nav--column {
  display: inline-block;
  padding-right: 70px;
  font-size: 20px;
  text-transform: uppercase;
  float: left;
  padding-top: 88px;
  
    @include at-query ($max, $medium) {
	  text-align: center;
    }
  
  
  &.first {
    padding-top: 0px;
  }
  
  &.mobile {
    width: 100%;
    padding: 0;
  }
}

.footer-nav--sub-list {
  font-size: 15px;
  font-family: HelveticaNeueLTStd-Cn;
  text-transform: uppercase;
  
    @include at-query ($max, $medium) {
	  text-align: center;
    }
  
  &.last {
    margin-top: 10px;
  }
  .input-group-field {
    width: 277px;
    text-align: center;
  }
  &.mobile {
  	form {
      margin: auto;
    }
  }
}