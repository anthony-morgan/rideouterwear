/*================ Search bar in header ================*/
.nav-search {
  position: relative;
  padding: 10px 0;

  @include at-query ($max, $medium) {
    padding: 0 0 ($gutter / 2);
    margin: 0 auto;
    text-align: center;
  }
}



/*============================================================================
  #Site Nav and Dropdowns
==============================================================================*/


/*================ Home to hamburger and cart that toggle drawers ================*/
.cart-right {
  padding: 0px;

}
.cart-pad {
  padding: 0px;
}
.site-nav--mobile {
  @extend .site-nav;
  
  &.cart-right {
    padding: 0px;
  }
  
}

.site-nav__link {
  .icon-arrow-down {
    position: relative;
    top: -2px;
    font-size: 10px;
    padding-left: $gutter / 4;
  }
  
  .site-nav--mobile & {
    display: inline-block;
  }
  &.dropdown {
    padding: 15px;
  }
  &.burger-left {
    padding: 19px 15px 15px !important;  }
  
  &.cart-right {
    padding: 19px 15px 15px !important;
  }

}







