
/*================ Homepage and Collection Images ================*/

/*--- Universal ---*/
.square {
  padding: 0;

    @include at-query ($max, $small){  
      height: 250px;
    }
  
    @include at-query ($min, $postSmall){  
      height: 450px;
    }  
  
    @include at-query ($min, $large){
      height: 675px;
    }
}

.square-text {
  color: white;
  text-align: center;
  
    @include at-query ($max, $small){
      padding-top: 175px;
      
      .btn--secondary {
    		padding: 10px 40px;
      }
    }
  
    @include at-query ($min, $postSmall){
      padding-top: 350px;
    }
  
    @include at-query ($min, $large){
      padding-top: 550px;
    }
}

.overlay {
  position: relative;
  text-align: center;
  width: 100%;
  height: 100%;
}

.banner-full {
    @include at-query ($max, $small){
      height: 200px;
      }
  
    @include at-query ($min, $postSmall){
      height: 300px;
      }
  
    @include at-query ($min, $large){
      height: 600px;
      }
}

.instagram-full {
  margin-bottom: 5px;
    @include at-query ($max, $small){
      height: 100px;
      }
  
    @include at-query ($min, $postSmall){
      height: 150px;
      }
  
    @include at-query ($min, $large){
      height: 300px;
      }
}



