/*============================================================================
  HEADER | header.liquid
==============================================================================*/

.global-header {
  padding: 0;
  width: 100%;
  z-index: 15;
  position: fixed;
  background-color: white;   

  @include at-query ($max, $medium) {
		position: fixed;
  }

  .grid--table {
    display: table;
    table-layout: fixed;
    width: 100%;

    > .grid__item {
      float: none;
      display: table-cell;
      vertical-align: middle;
    }
  }
}

/*================= Desktop Header | desktop-nav.liquid ===================*/

