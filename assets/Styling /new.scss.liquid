/*============================================================================
  #Drawers
==============================================================================*/
.js-drawer-open {
  overflow: hidden;
  height: auto;
}

#navDrawer {
  padding: 0px;
}

.drawer {
  @include promote-layer();
  display: none;
  position: fixed;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
  top: 158px;
  bottom: 0;
  padding: 0 ($gutter / 2) ($gutter / 2);
  max-width: 100%;
  z-index: $zindexDrawer;
  color: $colorDrawerText;
  background-color: $colorDrawers;
  transition: $drawerTransition;

  a {
    color: $colorDrawerText;

    &:hover,
    &:focus {
      opacity: 0.7;
    }
  }

  input,
  textarea {
    border-color: $colorDrawerBorder;
  }
}

.drawer--left {
  {%comment %} width: $drawerNavWidth; {% endcomment%}
  left: -$drawerNavWidth;
  top: 60px;
  width: 100%;

  .js-drawer-open-left & {
    display: block;
    @include transform(translateX($drawerNavWidth));

    .lt-ie9 & {
      left: 0;
    }
  }
}

.drawer--right {
  {% comment %}width: $drawerCartWidth; {% endcomment %}
  right: -$drawerCartWidth;
  border-left: 1px solid $colorDrawerBorder;

  .js-drawer-open-right & {
    display: block;
    @include transform(translateX(-$drawerCartWidth));

    .lt-ie9 & {
      right: 0;     
  }
  }
  @include at-query ($max, $medium){
  top: 60px;  
    width: 100%;  
  }
}


#PageContainer {
  overflow: hidden;
}

.is-moved-by-drawer {
  @include promote-layer();
  transition: $drawerTransition;

  .js-drawer-open-left & {
    @include transform(translateX($drawerNavWidth));
  }

  .js-drawer-open-right & {
    @include transform(translateX(-$drawerCartWidth));
  }
}

.drawer__header {
  display: inline-block;
  height: 50px;
  width: 100%;
  padding-top: 10px;
}

.drawer__title,
.drawer__close {
  display: table-cell;
  vertical-align: middle;
}

.drawer__title {
  width: 100%;
}

.drawer__close {
  width: 1%;
  text-align: center;
  font-size: em(18px);
}

.continue-shopping {
  
  .drawer__close {
    width: 100%;
    margin-bottom: 20px;
    
    button {
      width: 100%;
      padding: 10px 60px;  
      color: black;
      right: 0;
      background: none;
      border: 2px solid black;
    }
  }
}

.drawer__close button {
  position: relative;
  right: -20px;
  height: 100%;
  padding: 0 20px;
  color: inherit;

  &:active,
  &:focus {
    background-color: darken($colorDrawers, 5%);
  }
}

/*======================= Mobile Header | =================================*/

.mobile-header {
  border-bottom: 2px solid black;
  background-color: white;   
}

.mobile-header__logo-link { 
  @include at-query ($max, $medium) {
  	margin: 0 auto;
  	padding-right: 30px;
