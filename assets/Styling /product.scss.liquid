/* Product Secondary */

.product-secondary-box {
  width: 100%;
  
  @include at-query ($max, $medium) {
    height: auto;
  }
}

.product-secondary-left {
  height: 100%;
}

.product-secondary-left-images {
  height: 100%;
}

.product-secondary-main {
      height: 600px;
    width: 100%;
}

.product-secondary-main-large {
    height: 100%;
    border-left: 10px white solid;
	width: 100%;
}

.product-secondary-images {
	height: 100%;
  
  li {
    width: 100%;
    height: 50%;
    margin-bottom: 0;
  }
}

.product-secondary-image-1 {
  width: 100%;
  height: 100%;
  border-left: 10px solid white;
  border-bottom: 5px solid white;
}

.product-secondary-image-2 {
  width: 100%;
  height: 100%;
  border-left: 10px solid white;
  border-top: 5px solid white;
}

.border-tabs {  
  border-right: 10px solid white;
  border-left: 10px solid white;
  
  @include at-query ($max, $medium) {
    border: none;
  }
  
}

.product-secondary-box {
    @include at-query ($max, $medium) {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    /* optional */
    -webkit-box-align: start;
    -moz-box-align: start;
    -ms-flex-align: start;
    -webkit-align-items: flex-start;
    align-items: flex-start;
    padding-top: 10px;
  }

   .product-secondary-left {
    -webkit-box-ordinal-group: 2;
    -moz-box-ordinal-group: 2;
    -ms-flex-order: 2;
    -webkit-order: 2;
    order: 2;
  }

  .product-tabs {
    -webkit-box-ordinal-group: 1;
    -moz-box-ordinal-group: 1;
    -ms-flex-order: 1;
    -webkit-order: 1;
    order: 1;
  }
}

.product--description {
    width: 380px;
  	margin-bottom: 20px;
  
    @include at-query ($max, $medium) {
      width: 88%;
    }
}

