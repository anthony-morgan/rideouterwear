.stamped-reviews,h2.stamped-header-title,span.stamped-starrating.stamped-summary-starrating,.stamped-summary-ratings,ul.stamped-tabs,select.stamped-sort-select,.stamped-reviews {
    display: none;
}

a.stamped-summary-actions-newreview {
    text-decoration: none;
}


.stamped-container {
    border: none !important;
    padding: 2em 0px !important;
}

.stamped-container {
    margin-top: 0px !important;
    padding-top: 0px !important;
}

.stamped-summary-actions-newquestion, .stamped-summary-actions-newreview {
    background: black !important;
    color: white !important;
    border: none !important;
    padding: 5px 15px !important;
}

a.stamped-summary-actions-newreview {
    float: left;
}

.stamped-content form {
    padding: 0px !important;
}

.stamped-carousel-title, #stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-subtitle {
    display: none;
}
.stamped-reviews-image {
    display: none !important;
}
.stamped-carousel-subtitle {
    float: left !important;
}
.fa-star, .fa-star-o, .fa-star-half-o {
   color: #000 !important; /* change color */
}

#stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-scroll .stamped-reviews-message,
#stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-scroll .stamped-reviews-author{
    margin-left: 0px !important;
}
a.stamped-reviews-link {
    text-decoration: none;
}
#stamped-reviews-widget[data-widget-type="carousel"] .fa-star-half-o:before, #stamped-reviews-widget[data-widget-type="carousel"] .fa-star-o:before, #stamped-reviews-widget[data-widget-type="carousel"] .fa-star:before {
    font-size: 20px !important;
}
.stamped-reviews-author,a.stamped-reviews-link {
    font-weight: normal !important;
}
#stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-scroll .stamped-reviews-message-block {
    font-style: normal !important;
}

@media screen and (max-width: 590px){
  div#stamped-reviews-widget[data-widget-type="carousel"] {
    width: 95% !important;
}
  
#stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-scroll div.stamped-reviews-message,
  #stamped-reviews-widget[data-widget-type="carousel"] .stamped-carousel-scroll div.stamped-reviews-author{
    margin-left: 0px !important;
}
}

div.stamped-carousel-scroll {
  height: 350px !important;
}

.spr-badge {
  text-align: center;
  text-transform: uppercase;
}

.spr-badge[data-rating="0.0"] {
    display: none;
}

.tabs--reviews {
  
  .stamped-product-reviews-badge {
    padding-bottom: 0;
    
    .stamped-badge {
      margin-bottom: 0;
    }
  }
}

.stamped-form-review .stamped-form-review-body .stamped-form-input {
  padding: 0 !important;
}

.stamped-form-review .stamped-form-review-body .stamped-form-input.stamped-form-input-textarea {
  padding: 5px !important;
}


.stamped-content form {
  margin: 0 10px !important;
}

.stamped-summary{
  padding-bottom: 0 !important;
}

.stamped-form-title {
  margin: 10px 0 !important;
}

.stamped-form-label+.stamped-form-input {
 padding: 5px !important; 
}

.input.stamped-form-input-email, input.stamped-form-input-text, textarea.stamped-form-input-textarea {
  padding: 5px !important;
}

.stamped-reviews {
  display: none !important;
}

#stamped-reviews-widget {
  margin:10px 10px 0 10px !important;
}

#stamped-main-widget {
  margin-top: 0 !important;
}

.stamped-product-reviews-badge {
  padding-bottom: 10px;
}

.stamped-badge {
  margin-bottom: 10px;
}
