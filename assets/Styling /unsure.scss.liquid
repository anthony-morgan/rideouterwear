.mobile--slider {
  height: 500px;
  margin: 10px 0 0;
  
  li {
    height: 500px;
    padding: 0;
    margin: 0 10px;
  }
  .slick-next {
    right: 25px;
    width: 30px;
    height: 30px;
  }
  .slick-prev {
    left: 20px;
    z-index: 5;
    width: 30px;
    height: 30px;
  }
}

.mobile-arrows {   
	margin-left: 7px;
    margin-right: 16px;
    width: 25%;
    margin: 20px auto;
  
  .slick-prev, .slick-next {
    position: relative;
    width: 30px;
    height: 30px;
  }
  
  .slick-prev:before, .slick-next:before {
    color: black;
  }
}

/* NEW */

.desktop-arrows {
  text-decoration: underline;
  font-family: $headerFontStack;
  text-transform: uppercase;
  margin-left: 10px;
  cursor: pointer;
  
}

li.desktop-arrows:first-child {
  padding-right: 10px;
}