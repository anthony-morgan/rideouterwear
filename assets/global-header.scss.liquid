/*============================================================================
  #Header
==============================================================================*/
.global-header {
  padding: 0;
  width: 100%;
  z-index: 10;

  @include at-query ($max, $medium) {
	position: fixed;
  }
  
  @include at-query ($min, $large) {
    height: 158px;
  }
  .grid--table {
    display: table;
    table-layout: fixed;
    width: 100%;

    > .grid__item {
      float: none;
      display: table-cell;
      vertical-align: middle;
    }
  }
}

