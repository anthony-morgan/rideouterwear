/* Store Messages */

#store-messages {
  background: #000000;

	.message {
  		position: relative;
  		padding: 15px 0 15px;
  		text-align: center;
	}	
		
  	.message .free {
  		line-height:1.3em;
      	color: #ffffff;
  		text-transform: uppercase;
  		margin: 0px;
    }
    .message .search-icon {
        display: inline-block;
        left: 0;
    	position: absolute;
    	top: 13px;
      	padding-left: 50px;
	}
  	.message .search-icon a{
      	color: white;
    }
  	.message .cart-right {
        display: inline-block;
        right: 0;
    	position: absolute;
    	top: 13px;
      	padding-right: 50px;
    }  
    .message .cart-right a{  
      	color: white;
	}
  	.message p{
      	margin: 0px;
    }
      
  @include at-query ($max, $medium) {
    display: none;
	}
}
  
/* Desktop Nav */

.desktop-nav {
  @include clearfix();
  margin: 0 auto;
  width: 100%;

  @include at-query ($min, $small) {
    padding: 0px;
  }
  @include at-query ($max, $medium){
    width: 100%;
  }
}

/* Desktop Nav Logo */

.desktop-nav--logo {
  max-width: 110px;
  height: 110px;
  text-align: center;
  margin: 0 auto;
  
  @include at-query ($max, $medium) {
    display: none;
  }
  
  a,
  a:hover,
  a:focus {
    text-decoration: none;
  }

  a, img {
    display: block;
  }

  img {
 	 max-width: 115px;
  }
  @include at-query ($max, $medium) {
     display: none;
  }
}

/* Desktop Nav Bar */

.desktop-nav--holder {
  background-color: $colorNav;
  position: static;
  visibility: visible;
  width: 100%;
}

.desktop-nav--bar {
  font-size: em(18px);
  cursor: default;
  text-align: left;
  margin: 0;
  padding-left: 150px;
  position: relative;
  top: -80px;
  width: 100%;

  li {
    margin: 0;
    text-transform: uppercase;
    padding-bottom: 20px;
  }

  > li {
    display: inline-block;
    text-align: left;    
  }
}

/*================ Dropdowns ================*/
.desktop-dropdown--columns {
  display: none;
  position: absolute;
  margin: 15px 0 0;
  width: 100%;
  padding: 20px 20px 0px 20px;
  z-index: $zindexNavDropdowns;
  background: white;


  .supports-no-touch .desktop-nav--list:hover &,
  .desktop-nav--list.desktop-nav--bar-hover &,
  .desktop-nav--bar-focus + & {
    display: block;
  }

  a {
    background-color: $colorNav;

    &:hover,
    &:active,
    &:focus {
      background-color: darken($colorNav, 10%);
    }
  }
}

.desktop-nav--list-link {
  display: block;
  text-decoration: none;
  padding: 15px 25px 0px 25px;
  white-space: nowrap;
  color: $colorNavText;

  &:hover,
  &:active,
  &:focus {
    color: darken($colorNavText, 15%);
  }
}

.desktop-dropdown {
  position: absolute;
  width: 100%;
  left: 0;
}

.desktop-dropdown--colums-list {
  float: left;
  width: 170px;
  font-size: 17px;
  text-transform: uppercase;
}

.desktop-dropdown--child {
}

li.desktop-dropdown--child-list {
  font-size: 14px;
  letter-spacing: 1px;
  font-family: HelveticaNeueLTStd-Cn;
  padding-top: 10px;
  padding-bottom: 0px;

}

