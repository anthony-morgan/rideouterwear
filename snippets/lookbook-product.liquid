<div class="grid">
{% if product.images.size > 1 %}
  <ul class="grid__item large--one-sixth grid-uniform">
  {% for image in product.images limit: 3 %}
    <li class="grid__item no-padding">
      <a href="{{ image.src | img_url: 'master' }}" class="product-single__thumbnail">
        <img class="right" src="{{ image.src | img_url: 'medium' }}" alt="{{ image.alt | escape }}">
      </a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}
 <div class="grid__item large--one-third text-center no-padding ">
   <div class="product-single__photos" id="ProductPhoto">
     {% assign featured_image = current_variant.featured_image | default: product.featured_image %}
     <img src="{{ featured_image | img_url: 'master' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
   </div>
 </div>
 <div class="grid__item large--one-third">

      <h1 itemprop="name">{{ product.title }}</h1>

     {% include 'product--add-to-cart' %}
     {% include 'product--description' %}
  </div>
</div>

