  slidesToScroll: 1,
  vertical: true,
  responsive: [
    {
      breakpoint: 900,
      settings: {
      slidesToShow: 3,
      vertical: false,
      touchThreshold: 10,
      prevArrow: $('.slick-prev'),
      nextArrow: $('.slick-next'),
       }
     }
   ]
});
</script>
